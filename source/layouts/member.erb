<% wrap_layout :layout do %>
  <div class="container-fluid">
    <div class='row'>
      <div class="col-md-8" id="content">
        <div class="panel panel-default">
          <div class="panel-body post-content">
            <h1><%= current_page.data.title %></h1>
            <%= yield %>
          </div>
        </div>
      </div>
      <div class='col-md-4'>
        <div class="container-fluid">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="bottom-teaser cf">
                <div class="isLeft">
                  <% if current_page.data.logo %>
                    <div class="member-image" style="background-image: url(/assets/images/members/<%= current_page.data.logo %>)">Blog Logo</div>
                  <% end %>
                  <h4><%= current_page.data.title %></h4>
                  <p class="published"><%= current_page.data.category %></p>
                  <p class="published"><%= current_page.data.country %></p>
                  <% if current_page.data.website %>
                    <p class="published"><a href="<%= current_page.data.website %>"><%= current_page.data.website %></a></p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
